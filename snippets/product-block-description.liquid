{%- if truncate_description and product.description.size > 100 -%}
  <div class="js-enabled  my-8 {{ block.shopify_attributes }}" x-data="{ open: false }" x-cloak data-color-scheme="{{ section_color | default: 'primary' }}">
    <div class="rte product-rte text-rte" x-show="!open">
    {{ product.description | strip_newlines | strip_html | truncatewords: 25 | newline_to_br  }}
    </div>
    <button @click="open = !open" x-show="!open" :aria-expanded="open ? true : 'false'" class="mt-4 inline-flex justify-start items-center hover:text-scheme-accent  items-center justify-cente cursor-pointer font-secondary text-sm">
      <span>{{ 'products.product.read_more' | t }}</span>
      <span class="inline-block w-3 h-3 ml-2">{%- render 'icon-plus' %}</span>
    </button>
    <div class="rte product-rte text-rte" x-show="open">
      {{ product.description }}
    </div>
  </div>
  <noscript>
  <div class="rte my-8 text-rte">
    {{ product.description }}
  </div>
  </noscript>
{%- else -%}
  <div class="rte product-rte text-rte my-8 {{ block.shopify_attributes }}">
    {{ product.description }}
  </div>
{%- endif -%}
