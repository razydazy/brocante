{% comment %}theme-check-disable LiquidTag,DeprecateLazysizes,DeprecateBgsizes{% endcomment %}
{%- if crop == 'none' or ratio == 0 or ratio == 0.0 -%}
  {%- assign image_widths = '180,360,540,720,900,1080,1296,1512,1728,1944,2160,2376,2592,2808,3024' | split: ',' -%}
  {%- capture image_widths -%}
    {%- for width in image_widths -%}
      {%- comment -%} Check if image width is less or equal to width {%- endcomment -%}
      {%- assign width_num = width | plus: 0 | round -%}
      {%- if image.width >= width_num -%}{{ width_num }},{%- endif -%}
    {%- endfor -%}
    {{ image.width }}
  {%- endcapture -%}
  {%- liquid
    assign image_widths = image_widths | strip_newlines
    assign img_url = image | img_url: '1x1' | replace: '_1x1.', '_{width}x.'
  -%}
  <div
      data-color-scheme="primary"
      data-image-id="{{ image_id }}"
      class="responsive-image-wrapper relative overflow-hidden w-full my-0 mx-auto {{ wrapper_class }}"
      style="height: 0; padding-top: {{ 100 | divided_by: image.aspect_ratio }}%;"
      {{ wrapper_attributes }}>
    <img class="responsive-image block absolute top-0 left-0 w-full h-full lazyload {{ image_class }} transition-opacity duration-200 ease-in-out w-full max-w-full h-auto {% if settings.zoom_images_on_hover %}transition-transform transform group-hover:scale-110{% endif %}"
        data-src="{{ img_url }}"
        data-widths="[{{ image_widths }}]"
        data-aspectratio="{{ image.aspect_ratio }}"
        data-sizes="auto"
        tabindex="-1"
        alt="{{ image.alt | escape }}"
        {{ image_attributes }}>
    {%- unless no_background -%}
    <div class="responsive-image-placeholder bg-scheme-text absolute top-0 left-0 right-0 bottom-0"></div>
    {%- endunless -%}
    <noscript>
      <div class="absolute top-0 left-0 w-full h-full">
        {% comment %}theme-check-disable ImgWidthAndHeight{% endcomment %}
        <img class="{{ image_class }}" src="{{ image | img_url: '2048x2048' }}" alt="{{ image.alt | escape }}">
        {% comment %}theme-check-enable ImgWidthAndHeight{% endcomment %}
      </div>
    </noscript>
  </div>
{%- else -%}
  <div class="gallery-image-cropped relative w-full overflow-hidden"
    style="padding-top:{{ 1 | divided_by: ratio | times: 100 }}%;">
    <div
      class="lazyload gallery-image-cropped__inner absolute top-0 left-0 right-0 bottom-0 bg-cover {% if settings.zoom_images_on_hover %}transition-transform transform group-hover:scale-110{% endif %}"
      data-bgset="{% render 'responsive-bg-image', image: image %}"
      data-sizes="auto"
      data-parent-fit="cover"
      style="
        background-image: url('{{ image | img_url: '300x300' }}');
        background-position: {{ image.presentation.focal_point.x }}% {{ image.presentation.focal_point.y }}%;
      "
      >
    </div>
  </div>
{%- endif -%}
