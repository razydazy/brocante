<!-- /snippets/social-sharing.liquid -->
<div class="{% unless no_margin %}my-8{% endunless %}">
  <h2 class="inline-block align-middle">
    {{ 'sharing.social_sharing.title' | t }}
  </h2>
  {% if settings.share_facebook %}
    <a class="inline-block w-5 ml-4 align-middle fill-current" target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}">
      {% render 'icon-facebook' %}
      <span class="visually-hidden">{{ 'sharing.social_sharing.facebook' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_twitter %}
    <a class="inline-block w-5 ml-4 align-middle fill-current" target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}">
      {% render 'icon-twitter' %}
      <span class="visually-hidden">{{ 'sharing.social_sharing.twitter' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_pinterest %}
    <a class="inline-block w-5 ml-4 align-middle fill-current" target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}{% if share_image != blank %}&amp;media={{ share_image | img_url: '1024x1024' }}{% endif %}&amp;description={{ share_title | url_param_escape }}">
      {% render 'icon-pinterest' %}
      <span class="visually-hidden">{{ 'sharing.social_sharing.pinterest' | t }}</span>
    </a>
  {% endif %}

</div>
